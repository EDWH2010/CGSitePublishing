<!doctype html>
<html lang="ja">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <meta name="robots" content="none,noindex,nofollow">
        <link rel="stylesheet" href="css/headerStyle.css" />
        <link rel="stylesheet" href="css/RogAddStyle.css" />
        <link rel="stylesheet" href="css/style.css" />
        <script type="text/javascript" src="lib/jquery-1.10.1.min.js"></script>
        <script src="lib/slick/slick.js"></script>
         <script src="lib/Three/three.js"></script>
        <script src="lib/ChatData.js"></script>
        <script src="lib/Member.js"></script>
      
        <title>新規登録画面</title>
    </head>
    <body id="wrapper">
        <header id="header-list">
            <div class="logo"><a href="index.ejs"><img id="home_logo" src="images/sample_logo001.png" alt="LOGO" title="メインロゴ" /></a></div>
            <div class="header-selection">
                <nav class="selection-list">
                    <ul id="navSelection">
                        <li name="select-search" onclick="changePage('watchPage.ejs')">捜索</li>
                        <li name="select-upload" onclick="changePage('workUploadPage.ejs');" style="display:none;">作品投稿</li>
                    </ul>
                </nav>
            </div>
            <div class="user-selection">
                 <button class="guest-button" onclick="javascript:window.location.href='rogin.ejs'">ログイン</button>
                <button class="guest-button" onclick="javascript:window.location.href='newMemAdded.ejs'">新規会員登録</button>
                <div id="user-icon">
                    <img src="" alt="UserIcon" id="user-image" />
                    <span id="user-name">ED0401</span>
                </div>
            </div>

            <button id="small-area-button" class="hide">-<br>-<br>-<br></button>
            <div id="small-area">   
                    <nav id="selection-list">
                        <ul id="small-navSelection">
                            <li name="small-select-userArea">
                                <div class="member-button" onclick="rogout()" style="display:none;">ログアウト</div>
                                <div class="guest-button" onclick="javascript:window.location.href='rogin.ejs'">ログイン</div>
                                <div class="guest-button" onclick="javascript:window.location.href='newMemAdded.ejs'">新規会員登録</div>
                            </li>
                            <li name="select-search" onclick="changePage('watchPage.ejs')">捜索</li>
                           <li name="select-upload" onclick="changePage('workUploadPage.ejs');" style="display:none;">作品投稿</li>
                        </ul>
                    </nav>
            </div>
        </header>
        <main>

            <div id="breadCrumbNav">
                <ul id="breadNavList">
                    <li onclick="changePage('index.ejs')">ホーム</li><span>&raquo</span>
                    <li>新規会員登録</li>
                </ul>
            </div>

            <div class="form-block">
                <h2>新規会員登録</h2>
               <!-- <button onclick="getMembers();">Member</button> -->
                <form id="main-form" name="main-form" onsubmit="">
                    <table name="newformtable">
                        <tr>
                            <td>ニックネーム</td>
                            <td><input name="nickname" type="text" /></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td><input name="email" type="email" /></td>
                        <tr>
                            <td>確認Email</td>
                            <td><input name="cemail" type="email" onchange="detectRightEmail(document.forms[0]);" />
                                <p id="email-error" style="color:red;display:none;">値が一致していません</p>
                            </td>
                        <tr>
                            <td>パスワード</td>
                            <td><input name="password" type="password" maxlength="12" /></td>
                        <tr>
                            <td>確認パスワード</td>
                            <td><input name="cpassword" type="password" maxlength="12" onchange="detectRightPassword(document.forms[0]);" />
                                <p id="pass-error" style="color:red;display:none;">値が一致していません</p>
                            </td>
                        </tr>
                        <tr>
                            <td>職種</td>
                            <td>
                            <select id="career" name="career">
                                <option value="ウェブデザイナー">ウェブデザイナー</option>
                                <option value="システムエンジニア">システムエンジニア</option>
                                <option value="プログラマー">プログラマー</option>
                                <option value="学生">学生</option>
                                <option value="その他">その他</option>
                            </select>
                        </td>
                        </tr>
                        <tr>
                            <td>使用目的</td>
                           <td> 
                            <select id="usedtarget" name="usedtarget">
                                <option value="個人の趣味で使用">個人の趣味で使用</option>
                                <option value="自分の作品で投稿してほかのユーザーとシェアするため">自分の作品で投稿してほかのユーザーとシェアするため</option>
                                <option value="純粋にいろんな作者の作品を閲覧するため">純粋にいろんな作者の作品を閲覧するため</option>
                            </select>
                        </td>
                        </tr>
                    </table>

                    <div><input id="new-registerButton" type="button" value="新規登録" onclick="getNewMemberData(document.forms['main-form']);" /></div>
                </form>
            </div>
        </main>
        <footer>
            <div>
                <small>Copy Rights &copy Reserved</small>
            </div>
        </footer>

        <script src="lib/PageMemberFunction.js"></script>
        <script src="lib/PageLoading.js"></script>
    </body>
</html>